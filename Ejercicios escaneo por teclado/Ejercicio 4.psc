//Ejercicio 4 Escribe un programa que sume, reste, multiplique y divida dos números introducidos por teclado
Algoritmo Ejerccio4
	Definir x,i,s,r,m,d Como Real;
	Escribir "Introduzca un valor";
	Leer x;
	Escribir "Introduzca otro valor";
	Leer i;
	s<-x+i;
	Escribir "Suma =",s;
	r<-x-i;
	Escribir "Resta =",r;
	m<-x*i;
	Escribir "Multiplicacion=",m;
	d<-x/i;
	Escribir "Division=",d;
	
FinAlgoritmo
